<% content_for :title, "Sign up" %>

<%= render UI::CardComponent.new(title: "Create an account", class: "max-w-md mx-auto") do |card| %>
  <% card.with_body do %>
    <p class="text-center text-base-content/70 mb-6">Join us and start building amazing things.</p> <%# Moved subtitle here %>

    <%- if devise_mapping.omniauthable? %>
      <div class="space-y-3">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%
            provider_name = case provider
                            when :github then "GitHub"
                            when :google_oauth2 then "Google"
                            when :microsoft_office365 then "Microsoft"
                            else provider.to_s.titleize
                            end
            provider_icon = case provider # Assuming you have an icon helper or SVG for these
                            when :github then "brand-github"
                            when :google_oauth2 then "brand-google"
                            when :microsoft_office365 then "brand-microsoft"
                            else "login" # Fallback icon
                            end
            btn_class = case provider
                        when :github then "btn-neutral"
                        else "btn-outline"
                        end
          %>
          <%= link_to omniauth_authorize_path(resource_name, provider), method: :post, class: "btn #{btn_class} w-full" do %>
            <%#= heroicon provider_icon, style: :solid, class: "w-5 h-5 mr-2" %> <%# Placeholder for icon helper %>
            <svg class="w-5 h-5 mr-2" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"> <%# Generic icon placeholder, replace with specific SVGs or helper %>
              <% if provider == :github %>
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
              <% elsif provider == :google_oauth2 %>
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              <% elsif provider == :microsoft_office365 %>
                 <path d="M10 0L20 3.63636V17.2727L10 21L0 17.2727V3.63636L10 0Z" fill="#F25022"/>
                 <path d="M10 0L20 3.63636V17.2727L10 21V0Z" fill="#7FBA00"/>
                 <path d="M10 10.5L0 7.27273V17.2727L10 21V10.5Z" fill="#00A4EF"/>
                 <path d="M10 10.5L20 7.27273V17.2727L10 21V10.5Z" fill="#FFB900"/>
              <% else %>
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm0 2a10 10 0 100-20 10 10 0 000 20z" clip-rule="evenodd" /> <%# Fallback icon path %>
              <% end %>
            </svg>
            Sign up with <%= provider_name %>
          <% end %>
        <% end %>
      </div>

      <div class="divider my-6">Or sign up with email</div>
    <% end %>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= f.error_notification %>
      <%= render "devise/shared/error_messages", resource: resource %>


      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  label: "Full name",
                  input_html: {
                    class: "input input-bordered w-full",
                    autocomplete: "name"
                  } %>

      <%= f.input :email,
                  required: true,
                  label: "Email address",
                  input_html: {
                    class: "input input-bordered w-full",
                    autocomplete: "email"
                  } %>

      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  label: "Password",
                  input_html: {
                    class: "input input-bordered w-full",
                    autocomplete: "new-password"
                  } %>

      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirm password",
                  input_html: {
                    class: "input input-bordered w-full",
                    autocomplete: "new-password"
                  } %>

      <%= f.button :submit, "Create account", class: "btn btn-primary w-full" %>
    <% end %>

    <div class="text-center mt-6">
      <p class="text-sm text-base-content/70">
        Already have an account?
        <%= link_to "Sign in", new_session_path(resource_name), class: "link link-hover link-primary font-medium" %>
      </p>
    </div>
  <% end %> <%# card.with_body %>
<% end %>
