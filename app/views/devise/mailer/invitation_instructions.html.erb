<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
  <h2 style="color: #333;">Hello <%= @resource.email %>,</h2>

  <p style="color: #555; line-height: 1.6;">
    <% if @resource.invited_by.present? %>
      <%= @resource.invited_by.name %> has invited you to join <strong><%= @resource.organization.name %></strong>.
    <% else %>
      You have been invited to join <strong><%= @resource.organization.name %></strong>.
    <% end %>
  </p>

  <div style="text-align: center; margin: 30px 0;">
    <%= link_to "Accept Invitation",
                accept_invitation_url(token: @token),
                style: "display: inline-block; padding: 12px 30px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px; font-weight: bold;" %>
  </div>

  <% if @resource.invitation_due_at %>
    <p style="color: #666; font-size: 14px;">
      This invitation will expire on <%= l(@resource.invitation_due_at, format: :long) %>.
    </p>
  <% end %>

  <% if @resource.organization.enterprise_login_configured? %>
    <p style="color: #555; line-height: 1.6;">
      <strong>Note:</strong> Your organization uses Single Sign-On (SSO). After accepting this invitation,
      you'll be able to log in using your company credentials.
    </p>
  <% else %>
    <p style="color: #555; line-height: 1.6;">
      After accepting this invitation, you'll be asked to set a password for your account.
    </p>
  <% end %>

  <hr style="border: none; border-top: 1px solid #eee; margin: 30px 0;">

  <p style="color: #999; font-size: 12px;">
    If you don't want to accept the invitation, please ignore this email. Your account won't be created until you access the link above and set your password.
  </p>
</div>
