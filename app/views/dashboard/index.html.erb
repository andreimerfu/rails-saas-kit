<div class="space-y-8">
  <!-- Header Section with Breadcrumbs and Actions -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
    <div>
      <div class="breadcrumbs text-sm">
        <ul>
          <li><%= icon "home-modern", class: "w-4 h-4" %></li>
          <li class="font-semibold">Dashboard</li>
        </ul>
      </div>
      <h1 class="text-3xl font-bold text-base-content mt-2">
        Welcome back, <%= current_user.name.split.first %>! ðŸ‘‹
      </h1>
      <p class="text-base-content/60 mt-1">Here's what's happening with your <%= @organization&.name || "organization" %> today.</p>
    </div>
    <div class="flex items-center gap-3">
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-outline btn-sm gap-2">
          <%= icon "funnel", class: "w-4 h-4" %>
          Filter
        </label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-base-100 rounded-box w-52 border border-base-300">
          <li><a>Last 7 days</a></li>
          <li><a>Last 30 days</a></li>
          <li><a>This quarter</a></li>
        </ul>
      </div>
      <button class="btn btn-primary btn-sm gap-2">
        <%= icon "plus-circle", class: "w-4 h-4" %>
        New Project
      </button>
    </div>
  </div>

  <!-- Quick Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">
    <!-- Team Members Stat -->
    <div class="card dashboard-card stat-card-gradient stat-blue border border-blue-200">
      <div class="card-body p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-blue-600 mb-1">Team Members</p>
            <p class="text-3xl font-bold text-blue-900">12</p>
            <div class="flex items-center gap-1 mt-2">
              <%= icon "arrow-trending-up", class: "w-4 h-4 text-green-500" %>
              <span class="text-sm text-green-600 font-medium">+2 this month</span>
            </div>
          </div>
          <div class="p-3 bg-blue-500 rounded-xl">
            <%= icon "user-group", class: "w-8 h-8 text-white" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Active Projects Stat -->
    <div class="card dashboard-card stat-card-gradient stat-green border border-emerald-200">
      <div class="card-body p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-emerald-600 mb-1">Active Projects</p>
            <p class="text-3xl font-bold text-emerald-900">8</p>
            <div class="flex items-center gap-1 mt-2">
              <%= icon "arrow-trending-up", class: "w-4 h-4 text-green-500" %>
              <span class="text-sm text-green-600 font-medium">3 completed</span>
            </div>
          </div>
          <div class="p-3 bg-emerald-500 rounded-xl">
            <%= icon "folder", class: "w-8 h-8 text-white" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Revenue Stat -->
    <div class="card dashboard-card stat-card-gradient stat-purple border border-violet-200">
      <div class="card-body p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-violet-600 mb-1">Monthly Revenue</p>
            <p class="text-3xl font-bold text-violet-900">$24.5k</p>
            <div class="flex items-center gap-1 mt-2">
              <%= icon "arrow-trending-up", class: "w-4 h-4 text-green-500" %>
              <span class="text-sm text-green-600 font-medium">+12% from last month</span>
            </div>
          </div>
          <div class="p-3 bg-violet-500 rounded-xl">
            <%= icon "currency-dollar", class: "w-8 h-8 text-white" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Task Completion Stat -->
    <div class="card dashboard-card stat-card-gradient stat-amber border border-amber-200">
      <div class="card-body p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-amber-600 mb-1">Completion Rate</p>
            <p class="text-3xl font-bold text-amber-900">89%</p>
            <div class="flex items-center gap-1 mt-2">
              <%= icon "check-circle", class: "w-4 h-4 text-green-500" %>
              <span class="text-sm text-green-600 font-medium">Above target</span>
            </div>
          </div>
          <div class="p-3 bg-amber-500 rounded-xl">
            <%= icon "chart-bar", class: "w-8 h-8 text-white" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
    <!-- Chart Section -->
    <div class="xl:col-span-2 space-y-6">
      <!-- Performance Chart -->
      <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body">
          <div class="flex items-center justify-between mb-6">
            <div>
              <h3 class="text-xl font-bold text-base-content">Performance Overview</h3>
              <p class="text-base-content/60 text-sm">Track your key metrics over time</p>
            </div>
            <div class="flex items-center gap-2">
              <div class="badge badge-success gap-1">
                <%= icon "arrow-trending-up", class: "w-3 h-3" %>
                +5.2%
              </div>
            </div>
          </div>
          
          <div class="h-80 flex items-center justify-center chart-placeholder">
            <div class="text-center">
              <%= icon "presentation-chart-line", class: "w-16 h-16 text-base-content/20 mx-auto mb-4" %>
              <p class="text-base-content/60 font-medium">Chart placeholder</p>
              <p class="text-base-content/40 text-sm">Connect your analytics to see data</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-base-content">Recent Activity</h3>
            <button class="btn btn-ghost btn-sm">View All</button>
          </div>
          
          <div class="space-y-4">
            <div class="flex items-center gap-4 p-3 bg-base-200/30 rounded-lg activity-item">
              <div class="avatar placeholder">
                <div class="bg-success text-success-content rounded-full w-10">
                  <%= icon "check", class: "w-5 h-5" %>
                </div>
              </div>
              <div class="flex-1">
                <p class="font-medium text-base-content">Project "Website Redesign" completed</p>
                <p class="text-sm text-base-content/60">Completed by Sarah Chen â€¢ 2 hours ago</p>
              </div>
              <div class="badge badge-success">Completed</div>
            </div>

            <div class="flex items-center gap-4 p-3 bg-base-200/30 rounded-lg activity-item">
              <div class="avatar placeholder">
                <div class="bg-warning text-warning-content rounded-full w-10">
                  <%= icon "exclamation-triangle", class: "w-5 h-5" %>
                </div>
              </div>
              <div class="flex-1">
                <p class="font-medium text-base-content">New team member invited</p>
                <p class="text-sm text-base-content/60">john.doe@example.com â€¢ 4 hours ago</p>
              </div>
              <div class="badge badge-warning">Pending</div>
            </div>

            <div class="flex items-center gap-4 p-3 bg-base-200/30 rounded-lg activity-item">
              <div class="avatar placeholder">
                <div class="bg-info text-info-content rounded-full w-10">
                  <%= icon "rocket-launch", class: "w-5 h-5" %>
                </div>
              </div>
              <div class="flex-1">
                <p class="font-medium text-base-content">New feature deployed</p>
                <p class="text-sm text-base-content/60">Version 2.1.0 released â€¢ 1 day ago</p>
              </div>
              <div class="badge badge-info">Released</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Sidebar -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body">
          <h3 class="text-lg font-bold text-base-content mb-4">Quick Actions</h3>
          <div class="space-y-3">
            <button class="btn btn-primary w-full justify-start gap-3 quick-action-btn">
              <%= icon "plus-circle", class: "w-5 h-5" %>
              Create New Project
            </button>
            <button class="btn btn-outline w-full justify-start gap-3 quick-action-btn">
              <%= icon "user-plus", class: "w-5 h-5" %>
              Invite Team Member
            </button>
            <button class="btn btn-outline w-full justify-start gap-3 quick-action-btn">
              <%= icon "document-plus", class: "w-5 h-5" %>
              Upload Document
            </button>
            <button class="btn btn-outline w-full justify-start gap-3 quick-action-btn">
              <%= icon "calendar-days", class: "w-5 h-5" %>
              Schedule Meeting
            </button>
          </div>
        </div>
      </div>

      <!-- Team Status -->
      <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body">
          <h3 class="text-lg font-bold text-base-content mb-4">Team Status</h3>
          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <div class="avatar">
                <div class="w-8 rounded-full">
                  <img src="https://ui-avatars.com/api/?name=Sarah+Chen&background=570df8&color=fff&size=32" />
                </div>
              </div>
              <div class="flex-1">
                <p class="font-medium text-sm">Sarah Chen</p>
                <p class="text-xs text-base-content/60">Product Manager</p>
              </div>
              <div class="badge badge-success badge-sm">Online</div>
            </div>
            
            <div class="flex items-center gap-3">
              <div class="avatar">
                <div class="w-8 rounded-full">
                  <img src="https://ui-avatars.com/api/?name=John+Doe&background=f59e0b&color=fff&size=32" />
                </div>
              </div>
              <div class="flex-1">
                <p class="font-medium text-sm">John Doe</p>
                <p class="text-xs text-base-content/60">Developer</p>
              </div>
              <div class="badge badge-warning badge-sm">Away</div>
            </div>
            
            <div class="flex items-center gap-3">
              <div class="avatar">
                <div class="w-8 rounded-full">
                  <img src="https://ui-avatars.com/api/?name=Maria+Garcia&background=ef4444&color=fff&size=32" />
                </div>
              </div>
              <div class="flex-1">
                <p class="font-medium text-sm">Maria Garcia</p>
                <p class="text-xs text-base-content/60">Designer</p>
              </div>
              <div class="badge badge-error badge-sm">Offline</div>
            </div>
          </div>
          
          <div class="divider"></div>
          <button class="btn btn-ghost btn-sm w-full">View All Team Members</button>
        </div>
      </div>

      <!-- Notifications -->
      <div class="card bg-base-100 shadow-xl border border-base-300">
        <div class="card-body">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-base-content">Notifications</h3>
            <div class="badge badge-primary">3</div>
          </div>
          
          <div class="space-y-3">
            <div class="alert alert-info py-3">
              <%= icon "bell", class: "w-4 h-4" %>
              <div class="text-sm">
                <p class="font-medium">System Update</p>
                <p class="text-xs opacity-70">Maintenance scheduled for tonight</p>
              </div>
            </div>
            
            <div class="alert alert-success py-3">
              <%= icon "check-circle", class: "w-4 h-4" %>
              <div class="text-sm">
                <p class="font-medium">Backup Complete</p>
                <p class="text-xs opacity-70">All data successfully backed up</p>
              </div>
            </div>
            
            <div class="alert alert-warning py-3">
              <%= icon "exclamation-triangle", class: "w-4 h-4" %>
              <div class="text-sm">
                <p class="font-medium">Storage Warning</p>
                <p class="text-xs opacity-70">85% of storage space used</p>
              </div>
            </div>
          </div>
          
          <div class="divider"></div>
          <button class="btn btn-ghost btn-sm w-full">View All Notifications</button>
        </div>
      </div>
    </div>
  </div>
</div>