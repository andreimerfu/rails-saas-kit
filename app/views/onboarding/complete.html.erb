<%= render 'stepper' %>

<div class="max-w-2xl mx-auto mt-8">
  <%= render UI::CardComponent.new(title: "Onboarding Complete!", class: "shadow-xl border-success text-success") do |card| %>
    <% card.with_body do %>
      <div class="text-center items-center"> <%# Added wrapper for styling %>
        <div class="text-success mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <%# Title is now part of CardComponent, keeping h1 for consistency if needed, or remove if title prop is enough %>
        <%# <h1 class="card-title text-3xl justify-center mb-3 text-success">Onboarding Complete!</h1> %>
        
        <div class="prose mx-auto mb-6">
        <p class="text-base-content/80 text-lg">
          Congratulations, <strong><%= current_user.name %></strong>!
        </p>
        <p class="text-base-content/80">
          Your organization, <strong><%= @organization&.name || "your new organization" %></strong>, has been successfully created.
          You are all set to explore and manage your new workspace.
        </p>
      </div>

      <%= link_to authenticated_root_path, class: "btn btn-success btn-wide" do %>
        Go to Dashboard
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 ml-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      <% end %>
      </div>
    <% end %>
  <% end %>
</div>