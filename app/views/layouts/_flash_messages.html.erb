<%# app/views/layouts/_flash_messages.html.erb %>
<div class="fixed top-5 right-5 z-50 w-full max-w-xs space-y-3">
  <% flash.each do |type, message| %>
    <%
      alert_class = case type.to_s
                    when 'notice' then 'alert-success'
                    when 'alert'  then 'alert-error'
                    when 'warning' then 'alert-warning'
                    else 'alert-info' # Default for other types like 'info'
                    end
    %>
    <div class="alert <%= alert_class %> shadow-lg">
      <div class="flex-1">
        <%# Optional: Add an icon based on type %>
        <% if type.to_s == 'notice' %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <% elsif type.to_s == 'alert' %>
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
        <% elsif type.to_s == 'warning' %>
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
        <% end %>
        <span><%= message %></span>
      </div>
      <%# Optional: Add a close button for dismissable alerts %>
      <%# <button class="btn btn-sm btn-ghost">Dismiss</button> %>
    </div>
  <% end %>
</div>