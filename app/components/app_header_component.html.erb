<div class="navbar bg-base-100/90 sticky top-0 z-30 min-h-16 w-full shadow-sm backdrop-blur">
  <div class="navbar-start">
    <div class="lg:hidden">
      <label for="sidebar-drawer" class="btn btn-square btn-ghost btn-sm">
        <%= icon :bars_3 %>
      </label>
    </div>
    
    <div class="px-2">
      <%# Breadcrumbs display, if present %>
      <% if breadcrumbs.any? %>
        <div class="text-sm breadcrumbs">
          <ul>
            <% breadcrumbs.each_with_index do |crumb, index| %>
              <li>
                <% if index == breadcrumbs.size - 1 %>
                  <span class="font-semibold text-base-content/80"><%= crumb[:title] %></span>
                <% else %>
                  <%= link_to crumb[:title], crumb[:path], class: "text-base-content/60 hover:text-base-content/80" %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <h1 class="text-md font-semibold text-base-content/80">
          <%= organization_display_name %>
        </h1>
      <% end %>
    </div>
  </div>
  <div class="navbar-end gap-2">
    <% if @current_user %>
      <%= render NavbarNotificationsComponent.new(current_user: @current_user) %>
    <% end %>

    <div class="dropdown dropdown-end" title="Change Theme">
      <div tabindex="0" class="btn btn-ghost btn-sm btn-circle">
        <%= icon :swatch %>
      </div>
      <div class="dropdown-content bg-base-200 text-base-content rounded-box mt-4 h-96 w-52 overflow-y-auto shadow-2xl">
        <ul class="menu menu-sm p-4" data-controller="theme">
          <% themes.each do |theme| %>
            <li><a tabindex="0" data-action="click->theme#switch" data-theme-value="<%= theme %>"><%= theme.humanize %></a></li>
          <% end %>
        </ul>
      </div>
    </div>

    <% if @current_user %>
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <img alt="Avatar" src="https://i.pravatar.cc/500?img=<%= @current_user.id % 70 + 1 %>" />
          </div>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box mt-3 w-52 p-2 shadow-lg">
          <li>
            <%= link_to edit_user_registration_path, class: "justify-between" do %>
              Profile
              <span class="badge badge-sm">User</span>
            <% end %>
          </li>
          <% if @current_user&.is_owner_or_admin? %>
            <li><%= link_to "Manage Organization", "/organization/manage" %></li>
          <% end %>
          <%# Future links: %>
          <%# <li><%= link_to "Settings", "#" %></li>
          <%# <li><%= link_to "Preferences", "#" %></li>
          <%# <li><%= link_to "Support", "#" %></li>
          <li><hr class="my-1"></li>
          <li><%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "text-error" %></li>
        </ul>
      </div>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-ghost btn-sm", data: { turbo: false } %>
    <% end %>
  </div>
</div>